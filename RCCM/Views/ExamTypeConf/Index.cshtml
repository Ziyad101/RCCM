@model List<ExamTypeConfViewModel>


<h1 class="text-center mb-4">قائمة الاختبارات (@Model.Count())</h1>



<div class="container">
    <table class="table table-hover table-striped">
        <thead class="bg-primary bg-opacity-75 text-black">
            <tr>
                <th>اسم الاختبار</th>
                <th>تاريخ البداية</th>
                <th>تاريخ النهاية</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Title</td>
                    <td>@DateOnly.FromDateTime(role.StartDate)</td>
                    <td>@DateOnly.FromDateTime(role.EndDate)</td>

                    <td>
                        <form asp-action="Edit" method="post">
                            <input hidden name="id" asp-for="@role.ExamTypeConfId" />
                            <button class="btn btn-warning" type="submit">تعديل البيانات</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input hidden name="id" asp-for="@role.ExamTypeConfId" />
                            <button class="btn btn-danger" type="submit">حذف الحالة</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <a class="nav-link text-decoration-none text-white btn btn-primary" asp-controller="ExamTypeConf" asp-action="Add"> Add Exam Type</a>
</div>