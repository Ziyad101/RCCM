@model AddExamTypeConfViewModel
@{
    ViewData["Title"] = "Add Status";
}

<h2>إضافة حالة</h2>

<form asp-action="AddExamTypeConf" method="post">
    <div class="form-group">
        <label asp-for="Title">عنوان الاختبار</label>
        <input asp-for="Title" class="form-control form-text" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">بداية فترة الاختبار</label>
        <input asp-for="StartDate" class="form-control form-text" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">نهاية فترة الاختبار</label>
        <input asp-for="EndDate" class="form-control form-text" />
    </div>


    <div class="d-flex justify-content-evenly mt-5">
        <button type="submit" class="btn btn-success">إضافة الاختبار</button>
        <a class="text-decoration-none btn btn-primary" asp-action="Index">العودة لقائمة الصلاحيات</a>
    </div>
</form>

