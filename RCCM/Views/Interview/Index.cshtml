@model List<InterviewViewModel>

<div class="container mt-4">
    <div class="row">
        <h2 class="text-center mb-4">المقابلات</h2>

        <!-- Interviews Table -->
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header" style="background-color: #072e6e; color: white;">
                    جدول المقابلات
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>اسم المرشح</th>
                                    <th>الرقم الهوية</th>
                                    <th>الجنسية</th>
                                    <th>رقم الجوال</th>
                                    <th>تاريخ المقابلة</th>
                                    <th>تفاصيل</th>
                                    <th>حضور</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var interview in Model)
                                {
                                    <tr>
                                        <td>@interview.Candidate.CandidateName</td>
                                        <td>@interview.Candidate.NationalId</td>
                                        <td>@interview.Candidate.Gender</td>
                                        <td>@interview.Candidate.PhoneNumber</td>
                                        <td>@interview.InterviewDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                    خيارات
                                                </button>
                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <li>
                                                        <form asp-action="Edit" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@interview.InterviewId" />
                                                            <button class="dropdown-item" type="submit">تعديل</button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form asp-action="Delete" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@interview.InterviewId" />
                                                            <button class="dropdown-item text-danger" type="submit">حذف</button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                        <td><span class="badge badge-secondary">قيد الانتظار</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
