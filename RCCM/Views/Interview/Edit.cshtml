@model UpdateInterviewViewModel

@{
    ViewData["Title"] = "تحديث المقابلة";
    Layout = "_AdminLayout";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow custom-card border-primary">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h2>تحديث المقابلة</h2>
                </div>
                <div class="card-body custom-card-body">
                    <form asp-action="EditInterview" method="post">
                        <!-- Candidate Selection -->
                        <div class="mb-3">
                            <label asp-for="CandidateId" class="form-label custom-form-label">المرشح</label>
                            <select asp-for="CandidateId" class="form-select custom-form-select" asp-items="@(new SelectList(Model.Candidates, "CandidateId", "CandidateName", Model.CandidateId))">
                                <option value="">اختر مرشح</option>
                            </select>
                            <span asp-validation-for="CandidateId" class="text-danger"></span>
                        </div>

                        <!-- Interview Date -->
                        <div class="mb-3">
                            <label asp-for="InterviewDate" class="form-label custom-form-label">تاريخ المقابلة</label>
                            <input asp-for="InterviewDate" class="form-control custom-form-control" type="date" />
                            <span asp-validation-for="InterviewDate" class="text-danger"></span>
                        </div>

                        <!-- Hidden InterviewId -->
                        <input type="hidden" asp-for="InterviewId" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">تحديث المقابلة</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة المقابلات</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
