                            <input asp-for="InterviewDate" class="form-control" />
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn bg-custom-primary text-white">إضافة المقابلة</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

