@model DeleteInterviewViewModel
<h2>Delete interview</h2>

<form asp-action="DeleteInterview" method="post">

    <div class="form-group">
        <label asp-for="Candidate" class="form-check-label"> Candidate</label>
        <label asp-for="Candidate.CandidateName" class="form-control">@Model.Candidate.CandidateName</label>
    </div>
    <div class="form-group">
        <label asp-for="InterviewDate"></label>
        <label asp-for="InterviewDate" class="form-control" >@Model.InterviewDate</label>
    </div>

    <input hidden asp-for="InterviewId" />
    <input hidden asp-for="CandidateId" />

    <div class="d-flex justify-content-evenly mt-5">
        <button type="submit" class="btn btn-success">Delete Interview </button>
        <a class="text-decoration-none btn btn-primary" asp-action="Index">العودة لقائمة التخصصات</a>
    </div>
</form>


