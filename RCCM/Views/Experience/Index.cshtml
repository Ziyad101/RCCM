@model List<ExperienceViewModel>


<h1 class="text-center mb-4">قائمة  (@Model.Count)</h1>

<div class="container">
    <table class="table table-hover table-striped">
        <thead class="bg-primary bg-opacity-75 text-black">
            <tr>
                <th>Company Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Exp in Model)
            {
                <tr>
                    <td>@Exp.Candidate.CandidateName</td>
                    <td>@Exp.Candidate.NationalId</td>
                    <td>@Exp.CompanyName</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><span class="badge badge-secondary">قيد الانتظار</span></td>
                </tr>
            }
        </tbody>
    </table>

    <a class="nav-link text-decoration-none text-white btn btn-success" asp-controller="Experience" asp-action="Add"> Add Exp</a>
</div>
