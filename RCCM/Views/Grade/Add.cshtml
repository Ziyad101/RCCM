@model AddGradeViewModel

@{
    ViewData["Title"] = "Add Grade";
    Layout = "_AdminLayout";
}

<div class="container my-4">

    <!-- Display Success Alert -->
    <div id="successAlert" class="alert alert-success alert-dismissible fade show d-none" role="alert">
        <span id="alertMessage"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-success">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h3>إضافة درجة الاختبار</h3>
                </div>
                <div class="card-body">
                    <form id="addGradeForm" asp-action="AddGrade" method="post">
                        <div class="mb-3">
                            <label asp-for="GradeValue" class="form-label">درجة الاختبار</label>
                            <input asp-for="GradeValue" class="form-control" type="text" />
                            <span asp-validation-for="GradeValue" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">إضافة درجة الاختبار</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة الدرجات</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#addGradeForm').on('submit', function (event) {
                event.preventDefault(); // Prevent default form submission

                var form = $(this);
                var successAlert = $('#successAlert');
                var alertMessage = $('#alertMessage');

                // Show success alert
                alertMessage.text('درجة الاختبار تم إضافتها بنجاح!');
                successAlert.removeClass('d-none');

                // Simulate a delay before redirecting
                setTimeout(function () {
                    form.off('submit').submit(); // Unbind event handler and submit form programmatically after delay
                }, 2000); // 2 seconds delay
            });
        });
    </script>
}
