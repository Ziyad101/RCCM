@model UpdateGradeViewModel

@{
    ViewData["Title"] = "Edit Grade Data";
    Layout = "_AdminLayout";
}

<div class="container my-4">

    <!-- Display edit Alert -->
    <div id="successAlert" class="alert alert-warning d-none">
        <span class="alert-message"></span>
    </div>

    <h2 class="text-center mb-4">تحديث درجة الاختبار</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-success">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h3>تحديث درجة الاختبار</h3>
                </div>
                <div class="card-body">
                    <form id="editGradeForm" asp-action="EditGrade" method="post">
                        <div class="mb-3">
                            <label asp-for="GradeValue" class="form-label">درجة الاختبار</label>
                            <input asp-for="GradeValue" class="form-control" type="text" />
                            <span asp-validation-for="GradeValue" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="GradeId" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">تحديث بيانات درجة الاختبار</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة الدرجات</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


