@model AddRoleViewModel
@{
    ViewData["Title"] = "Add Role";
}

<h2>إضافة مستخدم</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="RoleName">اسم الصلاحية</label>
        <input asp-for="RoleName" class="form-control form-text" />
    </div>
    <div class="d-flex justify-content-evenly mt-5">
        <button type="submit" class="btn btn-success">إضافة صلاحيات</button>
        <a class="text-decoration-none btn btn-primary" asp-action="Index">العودة لقائمة الصلاحيات</a>
    </div>
</form>

