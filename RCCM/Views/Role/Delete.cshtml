@model DeleteRoleViewModel
@{
    ViewData["Title"] = "Delete Role";
    Layout = "_AdminLayout";
}

<div class="container mt-5 mb-5">
    <!-- Display delete Alert -->
    <div id="successAlert" class="alert alert-danger d-none">
        <span class="alert-message"></span>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow custom-card border-danger">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h2>حذف الصلاحية</h2>
                </div>
                <div class="card-body custom-card-body">
                    <form id="deleteUserForm" asp-action="DeleteRole" method="post">
                        <p><strong>اسم الصلاحية:</strong> @Model.RoleName</p>
                        <input type="hidden" asp-for="RoleId" />
                        <input type="hidden" asp-for="RoleName" />
                        <div class="d-flex justify-content-between mt-5">
                            <button type="submit" class="btn btn-danger">حذف الصلاحية</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة الصلاحيات</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
