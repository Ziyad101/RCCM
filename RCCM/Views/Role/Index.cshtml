@model List<RoleViewModel>


<h1 class="text-center mb-4">قائمة الصلاحيات (@Model.Count())</h1>



<div class="container">
    <table class="table table-hover table-striped">
        <thead class="bg-primary bg-opacity-75 text-black">
            <tr>
                <th>اسم الصلاحيات</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleName</td>

                    <td>
                        <form asp-action="Edit" method="post">
                            <input hidden name="RoleId" asp-for="@role.RoleId" />
                            <button class="btn btn-warning" type="submit">تعديل البيانات</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input hidden name="roleId" asp-for="@role.RoleId" />
                            <button class="btn btn-danger" type="submit">حذف الصلاحية</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <a class="nav-link text-decoration-none text-white btn btn-primary" asp-controller="Role" asp-action="Add"> إضافة صلاحية</a>
</div>