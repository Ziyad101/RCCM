@model UpdateRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "_AdminLayout";
}

<div class="container mt-5 mb-5">

    <!-- Display edit Alert -->
    <div id="successAlert" class="alert alert-warning d-none">
        <span class="alert-message"></span>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow custom-card border-success">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h2>تحديث الصلاحيات</h2>
                </div>
                <div class="card-body custom-card-body">
                    <form id="editUserForm" asp-action="EditRole" method="post">
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label custom-form-label">اسم الصلاحية</label>
                            <input asp-for="RoleName" class="form-control custom-form-control" value="@Model.RoleName" />
                        </div>

                        <input type="hidden" asp-for="RoleId" />

                        <div class="d-flex justify-content-between mt-5">
                            <button type="submit" class="btn btn-success">تحديث بيانات الصلاحية</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة الصلاحيات</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
