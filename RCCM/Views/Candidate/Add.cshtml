@model AddCandidateViewModel
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     

    }
}

    <div class="form-group">
        <label asp-for="CandidateStatusId" class="form-check-label">حالة المرشح</label>
        <select asp-for="CandidateStatusId" class="form-control form-select" asp-items="@(new SelectList(Model.CandidateStatuses, "CandidateStatusId", "Status"))"></select>
    </div>


<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-custom-primary shadow-lg">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h2>إضافة مرشح</h2>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="CandidateName" class="form-label text-custom-primary fw-bold">اسم المرشح</label>
                            <input asp-for="CandidateName" class="form-control form-control-lg border-custom-primary" placeholder="أدخل اسم المرشح" />
                            <span class="text-danger mt-1" asp-validation-for="CandidateName"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NationalId" class="form-label text-custom-primary fw-bold">رقم الهوية</label>
                            <input asp-for="NationalId" type="number" class="form-control form-control-lg border-custom-primary" placeholder="أدخل رقم الهوية" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label text-custom-primary fw-bold">تاريخ الميلاد</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg border-custom-primary" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-custom-primary fw-bold">البريد الإلكتروني</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg border-custom-primary" placeholder="أدخل البريد الإلكتروني" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label text-custom-primary fw-bold">رقم الهاتف</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control form-control-lg border-custom-primary" placeholder="أدخل رقم الهاتف" />
                        </div>

                        <fieldset class="mb-3">
                            <legend class="form-label text-custom-primary fw-bold">الجنس:</legend>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" type="radio" value="Male" class="form-check-input border-custom-primary" />
                                <label asp-for="Gender" class="form-check-label">ذكر</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" type="radio" value="Female" class="form-check-input border-custom-primary" />
                                <label asp-for="Gender" class="form-check-label">أنثى</label>
                            </div>
                        </fieldset>

                        <div class="mb-3">
                            <label asp-for="MajorId" class="form-label text-custom-primary fw-bold">التخصص الجامعي</label>
                            <select asp-for="MajorId" class="form-select form-select-lg border-custom-primary" asp-items="@(new SelectList(Model.Majors, "MajorId", "MajorName"))">
                                <option value="">اختر التخصص</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NationalityId" class="form-label text-custom-primary fw-bold">الجنسية</label>
                            <select asp-for="NationalityId" class="form-select form-select-lg border-custom-primary" asp-items="@(new SelectList(Model.Nationalities, "NationalityId", "NationalityName"))">
                                <option value="">اختر الجنسية</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">إضافة المرشح</button>
                            <a class="btn btn-danger btn-lg shadow-sm" asp-action="Index">العودة لقائمة المرشحين</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>