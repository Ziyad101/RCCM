@model DeleteUserViewModel

@{
    Layout = "_AdminLayout";
}

<div class="container mt-5 mb-5">

    <!-- Display delete Alert -->
    <div id="successAlert" class="alert alert-danger d-none">
        <span class="alert-message"></span>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow custom-card border-danger">
                <div class="card-header bg-custom-primary  text-white text-center">
                    <h2>حذف المستخدم</h2>
                </div>
                <div class="card-body custom-card-body">
                    <form id="deleteUserForm" asp-action="DeleteUser" method="post">
                        <div class="mb-3">
                            <p><strong>اسم المستخدم:</strong> @Model.UserName</p>
                        </div>
                        <div class="mb-3">
                            <p><strong>الصلاحية:</strong> @Model.RoleName</p>
                        </div>

                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="RoleId" />

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">حذف المستخدم</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة المستخدمين</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
