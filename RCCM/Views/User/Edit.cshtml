
@model UpdateUserViewModel

<h2>تحديث مستخدم</h2>

<form class=" " asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="UserName">اسم المستخدم</label>
        <input asp-for="UserName" class="form-control form-text" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">صلاحية المستخدم</label>
        <select asp-for="RoleId" class="form-control form-select" asp-items="@(new SelectList(Model.Roles, "RoleId", "RoleName",Model.RoleId))"></select>
    </div>
    <input hidden asp-for="UserId" />
    <div class="d-flex justify-content-evenly mt-5">
        <button type="submit" class="btn btn-success">تحديث بيانات المستخدم</button>
        <a class="text-decoration-none btn btn-primary" asp-action="Index">العودة لقائمة المستخدمين</a>
    </div>
</form>
