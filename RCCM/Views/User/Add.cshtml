@model AddUserViewModel
@{
    ViewData["Title"] = "Add User";
}
<h2>إضافة مستخدم</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="UserName">اسم المستخدم</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">صلاحية المستخدم</label>
        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "RoleId", "RoleName"))"></select>
    </div>
    <div class="d-flex justify-content-evenly mt-5">
        <a class="text-decoration-none btn btn-success" asp-action="Index">إضافة المستخدم</a>
    </div>
</form>


