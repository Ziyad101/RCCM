@model Core.Entities.ViewModel.AddUserViewModel
@{
    ViewData["Title"] = "Add User";
}
<h2>إضافة مستخدم</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="UserName">اسم المستخدم</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleId">صلاحية المستخدم</label>
        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "RoleId", "RoleName"))"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">إضافة مستخدم</button>
</form>


