@model AddUserViewModel

@{
    ViewData["Title"] = "Add User";
    Layout = "_AdminLayout";
}

<div class="container mt-5 mb-5">

    <!-- successful alert -->
    <div id="successAlert" class="alert alert-success d-none">
        <span class="alert-message"></span>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow custom-card border-primary">
                <div class="card-header bg-custom-primary text-white text-center">
                    <h2>إضافة مستخدم</h2>
                </div>
                <div class="card-body custom-card-body">
                    <form id="addUserForm" asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label custom-form-label">اسم المستخدم</label>
                            <input asp-for="UserName" class="form-control custom-form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label custom-form-label">صلاحية المستخدم</label>
                            <select asp-for="RoleId" class="form-control form-select" asp-items="@(new SelectList(Model.Roles, "RoleId", "RoleName"))"></select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">إضافة المستخدم</button>
                            <a class="btn btn-primary" asp-action="Index">العودة لقائمة المستخدمين</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
