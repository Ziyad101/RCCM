@model List<UserViewModel>

<h1 class="text-center mb-4">قائمة المستخدمين (@Model.Count())</h1>

<table class="table table-hover table-striped">
    <thead class="bg-primary bg-opacity-75 text-black">
        <tr>
            <th>اسم المستخدم</th>
            <th>صلاحيات المستخدم</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.RoleName</td>
                <td><a class="nav-link text-black "  asp-controller="User" asp-action="Update" asp-route-id="@user.UserId">عرض بيانات المستخدم</a></td>
            </tr>
        }
    </tbody>
</table>
