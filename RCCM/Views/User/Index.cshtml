@model List<UserViewModel>

<h1 class="text-center mb-4">قائمة المستخدمين (@Model.Count())</h1>

<table class="table table-hover table-striped">
    <thead class="bg-primary bg-opacity-75 text-black">
        <tr>
            <th>اسم المستخدم</th>
            <th>صلاحيات المستخدم</th>
            <th></th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.RoleName</td>
                <td><a class="nav-link text-black " asp-controller="User" asp-action="Update" asp-route-id="@user.RoleId">عرض بيانات المستخدم</a></td>
                <td><form class="from-control " asp-action="Delete" asp-controller="User" method="post">
                <input type="hidden" name="id" value="@user.UserId"/>
                    <button type="submit" class="btn btn-danger"> حذف المستخدم</button>
                </form>
                </td>
                

            </tr>
        }

    </tbody>
</table>

<a class="nav-link text-black btn btn-primary" asp-controller="User" asp-action="Add"> إضافة مستخدم</a>
