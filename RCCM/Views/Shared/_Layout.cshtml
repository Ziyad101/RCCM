 <!DOCTYPE html>
<html lang="ar-sa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RCCM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RCCM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


</head>
<body>
    <header>
        <!-- User Nav Bar -->
        <nav class="navbar navbar-expand-sm mb-3 bg user-navbar">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/LOGO.ico" width="270" height="75" alt="RCJY">
            </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item border-start mx-2"></li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Recruitment" asp-action="RecruitIndex">التوظيف</a>
                        </li>
                        <li class="nav-item border-start mx-2"></li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Candidate" asp-action="CandidateIndex">المرشحين</a>
                        </li>
                        <li class="nav-item border-start mx-2"></li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Interview" asp-action="InterviewIndex">المقابلات الشخصيه</a>
                        </li>
                
                        <li class="nav-item border-start mx-2"></li>
                        
                        <!-- Uesr to Admin Button -->
                
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Nationality" asp-action="Index">الجنسيات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CandidateStatus" asp-action="Index">الحالات</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExamTypeConf" asp-action="Index">الاختبارات</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExamResult" asp-action="Index">نتائج الاختبارات</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Interview" asp-action="Index">Interview </a>
                        </li>
                    </ul>
                </nav>
    </header>




    <div class="bg-tiled">
        <div class="container-fluid">
            <main role="main" class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text fixed-bottom bg text-white text-center">
        <div class="container ">
            &copy; 2024 - RCCM</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>




</body>

</html>
