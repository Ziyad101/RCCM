@model List<MajorViewModel>

<h1 class="text-center mb-4">قائمة التخصصات (@Model.Count())</h1>



<div class="container">
    <table class="table table-hover table-striped">
        <thead class="bg-primary bg-opacity-75 text-black">
            <tr>
                <th>اسم التخصص</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var major in Model)
            {
                <tr>
                    <td>@major.MajorName</td>

                    <td>
                        <form asp-action="Edit" method="post">
                            <input hidden asp-for="@major.MajorId" name="id" />
                            <button class="btn btn-warning" type="submit">تعديل البيانات</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input hidden asp-for="@major.MajorId" name="id" />
                            <button class="btn btn-danger" type="submit">حذف المستخدم</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <a class="nav-link text-decoration-none text-white btn btn-success" asp-controller="Major" asp-action="Add"> إضافة تخصص</a>
</div>